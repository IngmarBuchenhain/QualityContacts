                    <TextBlock Margin="20">Nummer:</TextBlock>
                    <TextBox Margin="20" Background="Transparent"
         BorderThickness="0"
         IsReadOnly="True"
         TextWrapping="Wrap"  Text="{Binding Nummer, Mode=OneWay}"></TextBox>
                    <TextBlock Margin="2">Durchwahl:</TextBlock>
                    <TextBox Margin="2" Background="Transparent"
         BorderThickness="0"
         IsReadOnly="True"
         TextWrapping="Wrap" Text="{Binding Direct, Mode=OneWay}"></TextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="2">Formatierte Nummer:</TextBlock>
                    <TextBox Margin="2" Background="Transparent"
         BorderThickness="0"
         IsReadOnly="True"
         TextWrapping="Wrap"  Text="{Binding FormattedPhoneNumber, Mode=OneWay}"></TextBox>
                </StackPanel>-->
                
                
                <!-- ENDE ZU LÖSCHENDER INHALT -->

            </StackPanel>
            
            <Rectangle 
                VerticalAlignment="Stretch" 
                Width="1" 
                Margin="20" 
                Stroke="Black" 
                />
            
            <StackPanel 
                Orientation="Vertical" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Width="250">

                <Label 
                    HorizontalAlignment="Left"
                    Padding="2,10,0,5"
                    Content="Titel"  
                    FontSize="18"
                    FontWeight="Bold"  
                    />
                
                <Label 
                    HorizontalAlignment="Left"
                    Padding="2,10,0,5"
                    Content="Neuen Titel in Datenbank aufnehmen:"                     
                    FontWeight="Bold"  
                    />
                
                <StackPanel 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top"
                    Margin="2,0,0,0">
                    
                    <TextBox 
                        Width="154" 
                        Margin="0,0,5,0" 
                        Text="{Binding NewTitle, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        KeyDown="EnterSaveNewTitle"
                        />
                    
                    <Button 
                        Content="Speichern"
                        Click="ButtonClickSaveNewTitle"                        
                        />
                    
                </StackPanel>
                
                <Label 
                    HorizontalAlignment="Left"
                    Padding="2,10,0,5"
                    Content="Bekannte Titel:"                     
                    FontWeight="Bold"  
                    />
                
                <TextBox
                    HorizontalAlignment="Left"
                    Height="390" 
                    Width="217" 
                    BorderThickness="0"
                    Text="{Binding Titles}"                                       
                    IsReadOnly="True"                    
                    TextWrapping="Wrap" 
                    VerticalScrollBarVisibility="Auto" 
                    AcceptsReturn="True"                     
                    />
                
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
