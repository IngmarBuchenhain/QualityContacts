<Window x:Class="QualityContacts.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QualityContacts.UI" d:DataContext="{d:DesignInstance Type=local:MainWindowViewModel}"
        mc:Ignorable="d"
        Title="Quality Contacts - Version 1.0.0 - bereitgestellt durch 'Die Oldies'" 
        Height="600" 
        Width="1000" 
        MinHeight="600" 
        MinWidth="1000" 
        MaxHeight="600" 
        MaxWidth="1000">
    <Grid>
        <StackPanel 
            Orientation="Horizontal" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Margin="20">
            <StackPanel 
                Orientation="Vertical"
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Width="680">

                <Label 
                    HorizontalAlignment="Left"
                    Padding="0,10,0,5"
                    Content="Kontakteingabe"  
                    FontSize="18"
                    FontWeight="Bold"  
                    />

                <Label 
                    HorizontalAlignment="Left"
                    Padding="0,10,0,5">
                    
                    <TextBlock 
                        TextWrapping="WrapWithOverflow"
                        Text="Hilfe- und Beschreibungstext, der noch eingegeben werden muss...">
                    </TextBlock>
                    
                </Label>

                <Label 
                    HorizontalAlignment="Left"
                    Padding="0,10,0,5"
                    Content="Neuen Kontakt erfassen:"                     
                    FontWeight="Bold"  
                    />

                <StackPanel 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top"
                    Margin="0,0,0,0">

                    <TextBox 
                        Width="440" 
                        Margin="0,0,5,0" 
                        Text="{Binding Input, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        KeyDown="TextBox_KeyDown"
                        TextChanged="TextBox_TextChanged"
                        />

                    <Button 
                        Margin="0,0,5,0" 
                        Content="Kontakt splitten"
                        IsEnabled="{Binding LetParse}"
                        Click="Button_Click"                        
                        />

                    <Button 
                        Content="Eingabefeld zurücksetzen"
                        Click="Button_Click"                        
                        />

                </StackPanel>

                <TextBlock 
                    Text="{Binding Errors}" 
                    Foreground="Red"
                    />

                <Label 
                    HorizontalAlignment="Left"
                    Padding="0,10,0,5"
                    Content="Erfasste Kontakte:"                     
                    FontWeight="Bold"  
                    />

                <ScrollViewer 
                    VerticalScrollBarVisibility="Auto">
                    
                    <ItemsControl 
                        Name="parsedContactsItemsControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Name}" />
                                    <TextBlock Text="{Binding Description}" />
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                </ScrollViewer>
                
                
                
                <!-- START ZU LÖSCHENDER INHALT -->

                <!--<StackPanel Orientation="Horizontal" Margin="20">

                    <TextBlock Margin="20">Ländervorwahl:</TextBlock>
                    <TextBox Margin="20" Background="Transparent"
         BorderThickness="0"
         IsReadOnly="True"
         TextWrapping="Wrap"  Text="{Binding Landesvorwahl, Mode=OneWay}"></TextBox>
